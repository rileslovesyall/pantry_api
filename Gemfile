source 'https://rubygems.org'

# core sinatra gems
gem 'rack'
gem 'rake'
gem 'sinatra'
gem 'sinatra-contrib'

# database fun
gem 'sinatra-activerecord'
gem 'activerecord'
gem 'activemodel'

# to send json
gem 'json'

